<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/guide_title_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginTop="86dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:text="@string/guide_title_01"/>

    <TextView
        android:id="@+id/guide_message_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:text="@string/guide_message_01"
        android:textColor="@color/message_color"/>

    <ImageView
        android:id="@+id/guide_image_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/guide_01"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="56dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/selected_ic"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:src="@drawable/guide_selected"/>

        <ImageView
            android:id="@+id/not_selected_ic"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:src="@drawable/guide_not_selected"/>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

<!--    <Button-->
<!--        style="@style/GuideButton"-->
<!--        android:id="@+id/guide_button_01"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:textStyle="bold"-->
<!--        android:text="@string/guide_button_text"/>-->

</LinearLayout>