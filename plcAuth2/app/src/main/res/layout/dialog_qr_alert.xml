<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp"
    android:orientation="vertical"
    android:background="@drawable/background_cm_alert">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        android:orientation="horizontal">

        <TextView
            android:text="@string/qr_alert_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/notosanscjkkrbold"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <View
        android:background="@color/underline_color"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="24dp"
        android:layout_height="1dp"/>

    <ImageView
        android:id="@+id/qr_code_image2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="232dp"
        android:layout_height="232dp"
        android:importantForAccessibility="no"/>

    <Button
        android:id="@+id/negative_button"
        style="@style/qr_alert_negative_button_style"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="98dp"
        android:layout_marginEnd="98dp"
        android:text="@string/alert_close_button"/>

</LinearLayout>