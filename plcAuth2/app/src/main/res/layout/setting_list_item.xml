<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_otp_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="24dp"
    android:paddingVertical="20dp"
    android:layout_marginBottom="8dp"
    android:elevation="1dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/account_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            tools:text="네이버 로그인" />

        <TextView
            android:id="@+id/otp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/otp_color"
            android:textSize="16sp"
            android:drawablePadding="4dp"
            android:text="********"
            app:drawableStartCompat="@drawable/ic_lock" />

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/change_account_name_button"
        android:layout_gravity="center_vertical"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_change"/>

    <ImageView
        android:id="@+id/push_button"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_push"/>

</LinearLayout>