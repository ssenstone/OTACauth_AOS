<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:paddingHorizontal="24dp"
    android:weightSum="1"
    android:orientation="vertical">

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.15"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="24sp"
        android:text="@string/generate_account_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/key_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:paddingVertical="8dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="@drawable/background_user_key_edit"
            android:textSize="24sp"
            tools:text="8"/>

        <TextView
            android:id="@+id/key_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:paddingVertical="8dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="@drawable/background_user_key_edit"
            android:textSize="24sp"
            tools:text="8"/>

        <TextView
            android:id="@+id/key_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:paddingVertical="8dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="@drawable/background_user_key_edit"
            android:textSize="24sp"
            tools:text="8"/>

        <TextView
            android:id="@+id/key_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:paddingVertical="8dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="@drawable/background_user_key_edit"
            android:textSize="24sp"
            tools:text="8"/>

        <TextView
            android:id="@+id/key_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:paddingVertical="8dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="@drawable/background_user_key_edit"
            android:textSize="24sp"
            tools:text="8"/>

        <TextView
            android:id="@+id/key_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:paddingVertical="8dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="@drawable/background_user_key_edit"
            android:textSize="24sp"
            tools:text="8"/>

    </LinearLayout>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:textColor="@color/blank_color"
       android:layout_marginTop="32dp"
       android:textSize="12sp"
       android:text="@string/user_key_message"/>

    <LinearLayout
        android:id="@+id/re_load_button"
        style="@style/positive_button_style"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:paddingHorizontal="44dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reload_button"
            android:textStyle="bold"
            android:textSize="16sp"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@drawable/ic_reload" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/account_message_color"
        android:textSize="12sp"
        android:layout_marginTop="60dp"
        android:text="@string/user_key_guide"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.72"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/qrcode_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:text="@string/qrcode_edit_button"
            style="@style/negative_button_style"/>

        <Button
            android:id="@+id/qrscan_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="4dp"
            android:text="@string/qrscan_button"
            style="@style/positive_button_style"/>

    </LinearLayout>

</LinearLayout>