<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_button_background_color</item>
        <item name="colorPrimaryDark">@color/blank_color</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="actionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="GuideButton">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@color/primary_button_background_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="negative_button_style">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/background_negative_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="positive_button_style">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/background_positive_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="search_bar_style">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/background_search_bar</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="add_account_button_style">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/background_add_account_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="user_key_edit_style">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/background_user_key_edit</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>